// Prisma schema for Waygate Provider (multi-tenant)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model Tenant {
  id        String   @id @default(uuid()) @db.Uuid
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Tenant branding and configuration
  settings   TenantSettings?
  
  users               User[]
  clients             Client[]
  keys                JwkKey[]
  audits              Audit[]
  authCodes           AuthCode[]
  sessions            Session[]
  refreshTokens       RefreshToken[]
  consents            Consent[]
  identityProviders   IdentityProvider[]
  externalIdentities  ExternalIdentity[]
  roles               TenantRole[]
  userRoles           UserRole[]
  flows               Flow[]
  flowRuns            FlowRun[]
  flowEvents          FlowEvent[]
  uiPrompts           UiPrompt[]
  userMetadata        UserMetadata[]
}

model User {
  id            String   @id @default(uuid()) @db.Uuid
  tenantId      String   @db.Uuid
  email         String
  name          String?
  passwordHash  String?  // optional: for direct password auth (scoped to tenant)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tenant              Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  credentials         Credential[]
  sessions            Session[]
  consents            Consent[]
  audits              Audit[]
  authCodes           AuthCode[]
  externalIdentities  ExternalIdentity[]
  userRoles           UserRole[]
  flowRuns            FlowRun[]
  metadata            UserMetadata[]

  @@unique([tenantId, email])
  @@index([tenantId])
}

model Credential {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  type      String   // e.g. 'password', 'oauth', 'webauthn'
  secret    String?  // hashed secret or external reference
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
}

model Client {
  id            String   @id @default(uuid()) @db.Uuid
  tenantId      String   @db.Uuid
  clientId      String
  clientSecret  String?
  name          String
  redirectUris  String[]
  grantTypes    String[]
  firstParty    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tenant        Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  authCodes     AuthCode[]
  refreshTokens RefreshToken[]
  consents      Consent[]

  @@unique([tenantId, clientId])
  @@index([tenantId])
}

model AuthCode {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  code        String   @unique
  clientId    String   @db.Uuid
  userId      String?  @db.Uuid
  redirectUri String
  scope       String?
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user   User?  @relation(fields: [userId], references: [id])

  @@index([tenantId])
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  tenantId  String   @db.Uuid
  userId    String   @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokens RefreshToken[]

  @@index([tenantId])
}

model RefreshToken {
  id        String   @id @default(uuid()) @db.Uuid
  tenantId  String   @db.Uuid
  token     String   @unique
  sessionId String   @db.Uuid
  clientId  String   @db.Uuid
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime

  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  client  Client  @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}

enum JwkStatus {
  staged
  active
  retired
}

model JwkKey {
  id               String    @id @default(uuid()) @db.Uuid
  tenantId         String    @db.Uuid
  kid              String
  pubJwk           Json
  privJwkEncrypted String
  status           JwkStatus @default(staged)
  notBefore        DateTime  @default(now())
  notAfter         DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, kid])
  @@index([tenantId])
}

model Consent {
  id        String   @id @default(uuid()) @db.Uuid
  tenantId  String   @db.Uuid
  userId    String   @db.Uuid
  clientId  String   @db.Uuid
  scopes    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId, clientId])
  @@index([tenantId])
}

model Audit {
  id        BigInt   @id @default(autoincrement())
  tenantId  String   @db.Uuid
  userId    String?  @db.Uuid
  action    String
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User?  @relation(fields: [userId], references: [id])

  @@index([tenantId])
}

enum IdentityProviderType {
  google
  microsoft
  github
  oidc_generic
}

enum ProviderStatus {
  enabled
  disabled
}

model IdentityProvider {
  id              String                @id @default(uuid()) @db.Uuid
  tenantId        String                @db.Uuid
  type            IdentityProviderType
  clientId        String
  clientSecretEnc String
  issuer          String
  scopes          String[]              @default(["openid", "email", "profile"])
  status          ProviderStatus        @default(disabled)
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt

  tenant          Tenant                @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  identities      ExternalIdentity[]

  @@unique([tenantId, type])
  @@index([tenantId])
}

model ExternalIdentity {
  id          String           @id @default(uuid()) @db.Uuid
  tenantId    String           @db.Uuid
  userId      String           @db.Uuid
  providerId  String           @db.Uuid
  subject     String
  email       String?
  claims      Json
  lastLoginAt DateTime
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  tenant   Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider IdentityProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([providerId, subject])
  @@index([tenantId])
  @@index([userId])
  @@index([email])
}

// Tenant branding and configuration settings
model TenantSettings {
  id              String   @id @default(uuid()) @db.Uuid
  tenantId        String   @unique @db.Uuid
  
  // Branding
  displayName     String?  // Human-readable display name
  logoUrl         String?  // URL to tenant logo
  brandColor      String?  // Primary brand color (hex)
  theme           Json?    // Theme configuration (light/dark mode, etc.)
  
  // Contact and policy
  contactEmail    String?  // Contact email for support
  privacyPolicyUrl String? // Privacy policy URL
  termsOfServiceUrl String? // Terms of service URL
  
  // Rate limiting configuration
  rateLimitConfig Json?    // Per-tenant rate limit overrides
  
  // SSO configuration
  ssoConfig       Json?    // SSO-specific settings per tenant
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

// RBAC: Tenant-specific roles
model TenantRole {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  name        String   // e.g., 'tenant_admin', 'tenant_viewer'
  description String?
  permissions Json     // Array of permission strings
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant      Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  userRoles   UserRole[]

  @@unique([tenantId, name])
  @@index([tenantId])
}

// RBAC: User role assignments within tenants
model UserRole {
  id        String   @id @default(uuid()) @db.Uuid
  tenantId  String   @db.Uuid
  userId    String   @db.Uuid
  roleId    String   @db.Uuid
  assignedBy String? @db.Uuid // User who assigned this role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant    Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      TenantRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId, roleId])
  @@index([tenantId])
  @@index([userId])
}

enum FlowTrigger {
  signin
  signup
  pre_consent
  post_consent
  custom
}

enum FlowStatus {
  enabled
  disabled
}

enum FlowRunStatus {
  running
  success
  failed
  interrupted
}

enum FlowEventType {
  enter
  exit
  prompt
  resume
  error
}

enum FlowNodeType {
  begin
  read_signals
  check_captcha
  prompt_ui
  metadata_write
  require_reauth
  branch
  webhook
  api_request
  finish
}

model Flow {
  id        String      @id @default(uuid()) @db.Uuid
  tenantId  String      @db.Uuid
  name      String
  trigger   FlowTrigger
  status    FlowStatus  @default(disabled)
  nodes     Json        @default("[]")  // Array of FlowNode objects stored as JSON
  version   Int         @default(1)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  tenant  Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  runs    FlowRun[]

  @@index([tenantId, trigger, status])
}

model FlowRun {
  id            String        @id @default(uuid()) @db.Uuid
  tenantId      String        @db.Uuid
  flowId        String        @db.Uuid
  userId        String?       @db.Uuid
  requestRid    String?
  trigger       FlowTrigger
  status        FlowRunStatus @default(running)
  context       Json
  currentNodeIndex Int?        // Index of current node instead of nodeId
  startedAt     DateTime      @default(now())
  finishedAt    DateTime?
  lastError     String?
  version       Int           @default(1)

  tenant Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  flow   Flow      @relation(fields: [flowId], references: [id], onDelete: Cascade)
  user   User?     @relation(fields: [userId], references: [id])
  events FlowEvent[]

  @@index([tenantId, status])
  @@index([tenantId, flowId])
  @@unique([tenantId, requestRid, trigger])
}

model FlowEvent {
  id        String        @id @default(uuid()) @db.Uuid
  tenantId  String        @db.Uuid
  flowRunId String        @db.Uuid
  nodeIndex Int?          // Index of node instead of nodeId
  type      FlowEventType
  metadata  Json?
  timestamp DateTime      @default(now())

  tenant Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  run    FlowRun @relation(fields: [flowRunId], references: [id], onDelete: Cascade)

  @@index([flowRunId])
  @@index([tenantId, type])
}

model UiPrompt {
  id         String   @id @default(uuid()) @db.Uuid
  tenantId   String   @db.Uuid
  title      String
  description String?
  schema     Json
  timeoutSec Int?     @default(120)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@unique([tenantId, title])
}

model UserMetadata {
  id        String   @id @default(uuid()) @db.Uuid
  tenantId  String   @db.Uuid
  userId    String   @db.Uuid
  namespace String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId, namespace])
  @@index([tenantId])
}
