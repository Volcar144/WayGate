// Prisma schema for Waygate Provider (multi-tenant)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid()) @db.Uuid
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users               User[]
  clients             Client[]
  keys                JwkKey[]
  audits              Audit[]
  authCodes           AuthCode[]
  sessions            Session[]
  refreshTokens       RefreshToken[]
  consents            Consent[]
  identityProviders   IdentityProvider[]
  externalIdentities  ExternalIdentity[]
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  tenantId  String   @db.Uuid
  email     String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant              Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  credentials         Credential[]
  sessions            Session[]
  consents            Consent[]
  audits              Audit[]
  authCodes           AuthCode[]
  externalIdentities  ExternalIdentity[]

  @@unique([tenantId, email])
  @@index([tenantId])
}

model Credential {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  type      String   // e.g. 'password', 'oauth', 'webauthn'
  secret    String?  // hashed secret or external reference
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
}

model Client {
  id            String   @id @default(uuid()) @db.Uuid
  tenantId      String   @db.Uuid
  clientId      String
  clientSecret  String?
  name          String
  redirectUris  String[]
  grantTypes    String[]
  firstParty    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tenant        Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  authCodes     AuthCode[]
  refreshTokens RefreshToken[]
  consents      Consent[]

  @@unique([tenantId, clientId])
  @@index([tenantId])
}

model AuthCode {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  code        String   @unique
  clientId    String   @db.Uuid
  userId      String?  @db.Uuid
  redirectUri String
  scope       String?
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user   User?  @relation(fields: [userId], references: [id])

  @@index([tenantId])
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  tenantId  String   @db.Uuid
  userId    String   @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokens RefreshToken[]

  @@index([tenantId])
}

model RefreshToken {
  id        String   @id @default(uuid()) @db.Uuid
  tenantId  String   @db.Uuid
  token     String   @unique
  sessionId String   @db.Uuid
  clientId  String   @db.Uuid
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime

  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  client  Client  @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}

enum JwkStatus {
  staged
  active
  retired
}

model JwkKey {
  id               String    @id @default(uuid()) @db.Uuid
  tenantId         String    @db.Uuid
  kid              String
  pubJwk           Json
  privJwkEncrypted String
  status           JwkStatus @default(staged)
  notBefore        DateTime  @default(now())
  notAfter         DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, kid])
  @@index([tenantId])
}

model Consent {
  id        String   @id @default(uuid()) @db.Uuid
  tenantId  String   @db.Uuid
  userId    String   @db.Uuid
  clientId  String   @db.Uuid
  scopes    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId, clientId])
  @@index([tenantId])
}

model Audit {
  id        BigInt   @id @default(autoincrement())
  tenantId  String   @db.Uuid
  userId    String?  @db.Uuid
  action    String
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User?  @relation(fields: [userId], references: [id])

  @@index([tenantId])
}

enum IdentityProviderType {
  google
  microsoft
  github
  oidc_generic
}

enum ProviderStatus {
  enabled
  disabled
}

model IdentityProvider {
  id              String                @id @default(uuid()) @db.Uuid
  tenantId        String                @db.Uuid
  type            IdentityProviderType
  clientId        String
  clientSecretEnc String
  issuer          String
  scopes          String[]              @default(["openid", "email", "profile"])
  status          ProviderStatus        @default(disabled)
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt

  tenant          Tenant                @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  identities      ExternalIdentity[]

  @@unique([tenantId, type])
  @@index([tenantId])
}

model ExternalIdentity {
  id          String           @id @default(uuid()) @db.Uuid
  tenantId    String           @db.Uuid
  userId      String           @db.Uuid
  providerId  String           @db.Uuid
  subject     String
  email       String?
  claims      Json
  lastLoginAt DateTime
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  tenant   Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider IdentityProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([providerId, subject])
  @@index([tenantId])
  @@index([userId])
  @@index([email])
}
