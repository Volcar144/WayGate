{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../packages/tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/env": [
        "./src/env"
      ]
    },
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
